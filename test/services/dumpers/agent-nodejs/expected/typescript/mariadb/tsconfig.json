{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "noImplicitOverride": true,
    "stripInternal": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true,
  }
}
